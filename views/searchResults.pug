extends default

block content

    link(rel="stylesheet", href="/stylesheets/containerBox.css")

    div(class="container-fluid container-box text-center")
        div(class="row my-3") 
            h3(class="ml-3") #{title}
        .row
            each product in products
                div(class="col-md-3 card")
                    img(class="card-img-top", src=`${product.image}`, alt="Drink image")
                    .card-body
                        h4.card-title #{product.name}
                        a(href=`/products/${product.id}`, class="btn btn-waring streched-link") More Detail
