doctype html
html
    head
        title #{title}
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        mata(charset="UTF-8")
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
        link(rel="stylesheet", href="/stylesheets/default.css")
        link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.8.2/css/all.css', integrity='sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay', crossorigin='anonymous')
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")
    body
        block header
            .container-fluid.sticky-top
                nav(class="row navbar navbar-expand-sm bg-light border-bottom shadow", id="top-nav")
                    .col-md-7
                        ul.navbar-nav
                            li.nav-item
                                a(class="nav-link", href="/") Home
                            li.nav-item
                                a(class="nav-link", href="/categories") Category
                            li.nav-item
                                a(class="nav-link", href="/trending") Trending
                            li.nav-item
                                a(class="nav-link", href="/products") All Products
                            li.nav-item.dropdown
                                a(class="nav-link dropdown-toggle", data-toggle="dropdown", href="#Contact-Us") Contact Us
                                .dropdown-menu
                                    .dropdown-item
                                        i(class="fas fa-envelope") contactus@gmail.com
                    .col-md-3
                        form(class="form-inline ", action="/search", method="POST")
                            .input-group
                                input(type="text", name="search", id="search", class="form-control", placeholder="Search")
                                .input-group-append
                                    button(type="submit", class="btn btn-warning") Search
                    if authenticated
                        .col-md-1
                            a(href='/profile', class="btn btn-warning", role="button") Profile
                        .col-md-1
                            a(href='/logout', class="btn btn-warning", role="button") Logout
                    else
                        .col-md-1
                            a(href='/login', class="btn btn-warning", id="login", role="button") Login
                        .col-md-1
                            a(href='/register', class="btn btn-warning", id="register", role="button") Register                  
                    

        block message
            if error && error.length > 0
                div(class="alert alert-danger alert-dismissible")
                    button(type="button", class="close", data-dismiss="alert") &times;
                    if error == "Requires login."
                        h4 
                            | Please 
                            a(href='/login', class="alert-link") login 
                            | first to proceed.
                            
                    else 
                        h4 #{error}
            if success && success.length > 0
                div(class="alert alert-success alert-dismissible")
                    button(type="button", class="close", data-dismiss="alert") &times;
                    h4 #{success}
                
        block content

        block footer
            footer.container-fluid
                p.col-12 Copyright &copy; Matrix 2019
